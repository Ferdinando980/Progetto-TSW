        <servlet-class>controller.everyone.CartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartOrder</servlet-name>
        <servlet-class>controller.everyone.CartOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CartOrder</servlet-name>
        <url-pattern>/CartOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfermaOrdine</servlet-name>
        <servlet-class>controller.everyone.ConfermaOrdineServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConfermaOrdine</servlet-name>
        <url-pattern>/ConfermaOrdine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>controller.everyone.ContactServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/Contact</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PageAdmin</servlet-name>
        <servlet-class>controller.admin.PageAdminServlet</servlet-class>
    </servlet>
    
