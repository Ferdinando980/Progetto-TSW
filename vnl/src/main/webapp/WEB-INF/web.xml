        <servlet-class>controller.everyone.FilterProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FilterProduct</servlet-name>
        <url-pattern>/FilterProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>controller.admin.DeleteProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/DeleteProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewOrder</servlet-name>
        <servlet-class>controller.registered.ViewOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewOrder</servlet-name>
        <url-pattern>/ViewOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderPage</servlet-name>
        <servlet-class>controller.registered.OrderPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderPage</servlet-name>
        <url-pattern>/OrderPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderDetails</servlet-name>
        <servlet-class>controller.admin.OrderDetailsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderDetails</servlet-name>
        <url-pattern>/OrderDetails</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateStatus</servlet-name>
