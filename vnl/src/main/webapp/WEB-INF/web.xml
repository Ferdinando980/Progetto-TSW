        <servlet-class>controller.admin.AddProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/AddProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageOrder</servlet-name>
        <servlet-class>controller.admin.ManageOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ManageOrder</servlet-name>
        <url-pattern>/ManageOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyProduct</servlet-name>
        <servlet-class>controller.admin.ModifyProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ModifyProduct</servlet-name>
