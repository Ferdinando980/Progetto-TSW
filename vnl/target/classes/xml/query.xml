<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <!-- Users -->
    <entry key="INSERT_USER">INSERT INTO users (user_id,email,password_hash,data_di_nascita, numero_di_telefono) VALUES (?,?,?,?,?)</entry>
    <entry key="DELETE_USER">DELETE FROM users WHERE user_id = ?</entry>
    <entry key="UPDATE_USER">UPDATE users SET   email=?, password=?, data_di_nascita=?, numero_di_telefono=? WHERE id=?</entry>

    <entry key="GET_USER_BY_ID">SELECT * FROM users WHERE user_id = ? </entry>
    <entry key="GET_USER_BY_USERNAME">SELECT * FROM users WHERE username = ? </entry>
    <entry key="GET_ALL_USERS">SELECT * FROM users</entry>


    <!-- Products -->
    <entry key="INSERT_PRODUCT">INSERT INTO products (product_name,product_id,product_desc,price, product_status, category_id) VALUES (?,?,?,?,?,?)</entry>
    <entry key="UPDATE_PRODUCT_NAME">UPDATE products SET product_name = ? WHERE product_id = ?</entry>
    <entry key="UPDATE PRODUCT_STATUS">UPDATE products SET product_status = ? WHERE product_id = ?</entry>
    <entry key="UPDATE_PRODUCT_PRICE">UPDATE products SET price = ? WHERE product_id = ?</entry>
    <entry key="UPDATE_PRODUCT_CATEGORY">UPDATE products SET category_id = ? WHERE product_id = ?</entry>
    <entry key="DELETE_PRODUCT">DELETE FROM products WHERE category_name = ?</entry>
    <entry key="FIND_PRODUCT_BY_ID">SELECT * FROM products WHERE product_id = ?</entry>
    <entry key="FIND_PRODUCT_BY_NAME">SELECT * FROM products WHERE product_name LIKE ?</entry>
    <entry key="GET_PRODUCT_BY_CATEGORY">SELECT * FROM products WHERE category_id = ?</entry>

    <!-- Orders -->
    <entry key="INSERT_ORDER">INSERT INTO orders (order_id,user_id,order_date,order_status, total_amount) VALUES (?,?,?,?,?)</entry>
    <entry key="UPDATE_ORDER_STATUS">UPDATE orders SET order_status = ? WHERE order_id = ?</entry>
    <entry key="DELETE_ORDER">DELETE FROM orders WHERE order_id = ?</entry>
    <entry key="GET_ORDERS_BY_USER">SELECT * FROM orders where user_id = ?</entry>

    <!-- Category -->
    <entry key="INSERT_CATEGORY">INSERT INTO categories (category_name) VALUES (?)</entry>
    <entry key="UPDATE_CATEGORY">UPDATE categories SET category_name = ? WHERE category_name = ?</entry>
    <entry key="DELETE_CATEGORY">DELETE FROM categories WHERE category_name = ?</entry>
    <entry key="SEARCH_CATEGORY_BY_NAME">SELECT * FROM categories WHERE category_name LIKE ?</entry>


</properties>